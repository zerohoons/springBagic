<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="arr" class="com.ict.ex04.DI_Array">
		<!-- 값을 설정하는 방법 : 생성자 / setter -->
		<!-- 배열처리는 <list>를 사용한다. -->
		<!-- setter -->
		<property name="arr1">
			<list>
				<value>1000</value>
				<value>2000</value>
				<value>3000</value>
				<value>4000</value>
			</list>
		</property>
		<property name="arr2">
			<list>
				<value>1000</value>
				<value>2000</value>
				<value>3000</value>
				<value>4000</value>
			</list>
		</property>
	</bean>
	

</beans>
